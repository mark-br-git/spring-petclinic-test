pipeline {
    agent any

    stages {
        stage('Build and Test') {
            steps {
                // Tutaj umieść kroki związane z budową i testowaniem projektu
            }
        }

        stage('Bump Version and Create Tag') {
            steps {
                script {
                    def currentTag = sh(returnStdout: true, script: 'git describe --abbrev=0 --tags').trim()
                    def newVersion = sh(returnStdout: true, script: "semver -i minor -c $currentTag")
                    
                    sh "git tag $newVersion"
                    sh "git push origin $newVersion"
                }
            }
        }
    }
}

